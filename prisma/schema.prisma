model Product {
  id          String        @id @default(uuid()) @db.Uuid
  name        String
  category    String
  price       Float
  description String
  Transaction Transaction[]
}

model Transaction {
  id         String  @id @default(uuid()) @db.Uuid
  product_id Product @relation(fields: [productId], references: [id])
  productId  String  @db.Uuid
  userId     String  @db.Uuid
}
